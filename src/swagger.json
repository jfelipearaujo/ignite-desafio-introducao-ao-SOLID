{
  "swagger": "2.0",
  "info": {
    "description": "Essa é uma documentação sobre a Atlas API",
    "version": "1.0.0",
    "title": "Atlas",
    "contact": {
      "email": "j.felipe.araujo@outlook.com"
    },
    "license": {
